{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Project",
      "type": "shell",
      "command": "mvn",
      "args": ["clean", "compile"],
      "group": "build",
      "isBackground": false,
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "mvn",
      "args": ["test"],
      "group": "test",
      "isBackground": false,
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build and Run Spring Boot Application",
      "type": "shell",
      "command": "mvn",
      "args": ["spring-boot:run"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Package Application",
      "type": "shell",
      "command": "mvn",
      "args": ["clean", "package"],
      "group": "build",
      "isBackground": false,
      "problemMatcher": ["$tsc"]
    }
  ]
}
